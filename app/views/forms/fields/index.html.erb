<div class="section">
  <div class="container">
    <p content="content">
      <%= link_to 'New field', new_form_field_path(@form), class: 'button is-primary' %>
    </p>

    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Label</th>
        <th>Type</th>
        <th>Accessibility</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @fields.each do |field| %>
        <tr>
          <td><%= field.name %></td>
          <td><%= field.label %></td>
          <td><%= field.class.model_name.human %></td>
          <td><%= Field.human_enum_value(:accessibility, field.accessibility) %></td>
          <td>
            <%= link_to 'Validations', edit_field_validations_path(field) %> |
            <%= link_to 'Options', edit_field_options_path(field) %> |
            <%= link_to 'Edit', edit_form_field_path(@form, field) %> |
            <%= link_to 'Destroy', form_field_path(@form, field), method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

